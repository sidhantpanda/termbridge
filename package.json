{
  "private": true,
  "scripts": {
    "dev": "concurrently \"yarn:server:dev\" \"yarn:client:dev\"",
    "server:dev": "cd packages/server && yarn dev",
    "client:dev": "cd packages/client && yarn dev",
    "build": "concurrently \"yarn:server:build\" \"yarn:client:build\"",
    "server:build": "cd packages/server && yarn build",
    "client:build": "cd packages/client && yarn build"
  },
  "workspaces": [
    "packages/server",
    "packages/client"
  ],
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}